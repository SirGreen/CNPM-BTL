@model InventoryManagementDemo.Models.InventoryItem

@{
    ViewData["Title"] = "Create Inventory Item";
}

<link rel="stylesheet" href="~/css/inventory-detail.css" />

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" class="form-control" type="number" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <div class="spacer"></div>
        <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
    </form>
</div>