@model InventoryManagementDemo.Models.AccountViewModel
@{
    ViewData["Title"] = "Tài khoản";
}
<div class="account-container ms-5 mt-5 ps-5">
    <div class="account justify-content-center align-content-center">
        <h1 class=""><strong>Thông tin tài khoản</strong></h1>
        <div class="account-form mt-5">
            <div class="account-info d-flex justify-content-between">
                <strong class="ms-3">Email</strong>
                @if (!string.IsNullOrEmpty(Model.Email)) {
                    <span class="info me-3">@Model.Email </span> 
                }
                else {<span class="info me-3">abc@hcmut.edu.vn</span>}                
            </div>

            <div class="account-info d-flex justify-content-between">
                <strong class="ms-3">Họ và tên</strong>
                @if (!string.IsNullOrEmpty(Model.FullName)) {
                    <span class="info me-3">@Model.FullName </span>
                }
                else {<span class="info me-3">ABC</span>}
            </div>
            
            <div class="account-info"><strong class="ms-3">Đổi mật khẩu</strong></div>

            <div class="account-info d-flex justify-content-between">
                <strong class="ms-3">Số dư</strong>
                @if (Model.Balance.HasValue) {
                    <span>@Model.Balance.Value.ToString("F0") trang A4</span>
                }
                else {<span class="info me-3">30 trang A4</span>}
            </div>
        </div>
    </div>
</div>
